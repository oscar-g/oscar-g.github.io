.profile
    // ms-respond(padding-top, 1)
    display flex
    flex-flow column nowrap
    justify-content center
    align-self center

    &__img
        flex 0 0 auto
    &__info
        flex 0 1 auto

    +mq(md)
        align-self auto
        flex-direction row
        padding  ms(2) ms(3) ms(0) ms(2)
        border: 0 $colors.accent dashed
        border-width 0
        border-right-width 4px
        border-left-width 4px

    &__img
        ms-respond(width, 3)
        ms-respond(height, 3)
        ms-respond(margin-bottom, -1)

        position relative
        border-radius 50%
        overflow hidden

        +mq(md)
            margin-bottom 0
            margin-right ms(0)

        &:hover
            box-shadow: 1px 1px 2px $colors.shadow

        img
            position absolute
            top 0
            left 0
            width 100%
            height 100%

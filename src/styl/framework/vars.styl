$debug ?= false
$ms-base ?= 12px
$ms-ratio ?= (3/2)
$computed-line-height = $ms-ratio * $ms-base

$text-color ?= lighten(#000, 20%)

// typography map
// selector -> leader, trailer, size, class (true to use selector name as class name)
// selector -> base: {}, $bp: {}
$typography-list ?= {
  body: {
    size: 0
    class: false
  }
  p: {
    lead: 0.25
    trail: 0.75
    size: 0
    'extra-lines': 0
  }
  '.lede': {
    base: {
      lead: .9
      trail: 0.6
      size: 1
      'extra-lines': 0.5
    }
  }
  h1: {
    base: {
      lead: 0.3
      trail: 0.7
      size: 4
      'extra-lines': -1
    }
    md: {
      lead: 0.7
      trail: 0.3
      size: 5
      'extra-lines': -1
    }
  }
